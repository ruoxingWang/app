<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" prefHeight="400.0" prefWidth="500.0" stylesheets="@/css/login.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ruoxing.javafx.controller.LoginController">
    <center>
        <GridPane fx:id="loginPane" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="btnClear" mnemonicParsing="false" text="%btnClear-text" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                <Button fx:id="btnLogin" mnemonicParsing="false" text="%btnLogin-text" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                <TextField fx:id="tfUsername" promptText="%tfAddr-prompt" GridPane.columnSpan="4" />
                <TextField fx:id="tfPassword" promptText="%tfPort-prompt" GridPane.columnSpan="4" GridPane.rowIndex="1" />
            <CheckBox fx:id="btnRemember" mnemonicParsing="false" text="记住账号密码" GridPane.columnSpan="2" GridPane.rowIndex="2" />
            </children>
            <padding>
                <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
            </padding>
        </GridPane>
    </center>
   <bottom>
      <Label fx:id="bottomPane" text="" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
